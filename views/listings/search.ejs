<% layout("/layouts/boilerplate") %>

<h3 class="mt-3">All listings</h3>
<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
  <%for(let listing of listings){%>
  <a href="/listings/<%=listing.id%>" style="text-decoration: none; color: inherit;">
    <div class="card col listing-card">
      <img
        class="card-img-top"
        src="<%=listing.image.url%>"
        alt="Listing"
        style="height: 20rem"
      />
      <div class="card-img-overlay"><%=listing.description%></div>
      <div class="card-body">
        <p class="card-text">
         <b><%=listing.title%></b>  <br />
          &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
          
        </p>
      </div>
    </div>
  </a>
  <%}%>
    
</div>


</div>